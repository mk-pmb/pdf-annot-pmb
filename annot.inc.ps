%!PS-Adobe-3.0

/annot_crossout {
  %%args: left top width height
  4 dict begin
    neg /height exch def
    /width exch def
    neg /top exch def
    /left exch def
    0 top translate
    gsave
     0.5 setlinewidth
     newpath 0 0 moveto width height rlineto stroke
     newpath width 0 moveto width neg height rlineto stroke
    grestore
    0 height translate
  end
} def

/showpage_with_annots {
  gsave
  /a4_mm_init PMBPS
  0 LIB_SIMPLE_PS_PMB /page_height get translate
  % /rgb_line_coordsys PMBPS

  /fontsize 4 def
  /linespacing 0.5 def
  /lineheight fontsize linespacing add def
  /fontname /Helvetica def /boldfontname /Helvetica-Bold def
  fontname fontsize 0.8 mul /select_font PMBPS

  cvx exec

  grestore
  systemdict /showpage get exec
} bind def
